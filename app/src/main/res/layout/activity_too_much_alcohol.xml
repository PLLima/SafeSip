<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EEF5"
    tools:context=".TooMuchAlcohol">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:backgroundTint="#2F5090"
                android:onClick="onClickBack"
                android:text="Back" />
        </LinearLayout>

        <TextView
            android:id="@+id/ThankYouTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="40sp"
            android:text="Thank you for registering your consumption!"
            android:textColor="#2E2E2E"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AlcoolQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:paddingVertical="50sp"
            android:text="Weight of alcohol"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/PercentageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp"
            android:paddingVertical="30sp"
            android:text="Percentage"
            android:textSize="25dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2F5090"
            android:text="What should I do ?" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>